<Window x:Class="ScannerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scanner Beolvasó" Height="300" Width="400">
	<Grid>
		<StackPanel Margin="10">
			<TextBox x:Name="txtInput" Margin="10" Height="30" />
			<Button x:Name="btnScan" Content="Beolvasás" Margin="10" Click="btnScan_Click"/>
			<TextBox x:Name="txtOutput" Margin="10" Height="200" AcceptsReturn="True" IsReadOnly="True" />
		</StackPanel>
	</Grid>
</Window>
